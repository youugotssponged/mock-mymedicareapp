<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    >

    <!-- LOGO/TEXT -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="62sp" />

    <!-- LOGO -->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="220dp"
        />

    <!-- WELCOME TEXT PLACEHOLDER -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loremMain"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        />

    <!--
        REGISTER BUTTON
        Goes to the Registration Activity
    -->
    <Button
        android:id="@+id/register_btn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/reg_btn"
        android:padding="25dp"
        android:layout_margin="20dp"
        />

    <!--
        Middle Text
    -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OR"
        android:textSize="20sp"
        android:paddingLeft="190dp"
        android:paddingRight="190dp"
        />

    <!--
        LOGIN BUTTON
        Goes to the Login Activity
    -->
    <Button
        android:id="@+id/login_btn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/login_btn"
        android:padding="25dp"
        android:layout_margin="20dp"
        />

</LinearLayout>